        <header class="header-one">
            <!-- header-area start -->
            <div id="sticker" class="header-area hidden-xs bg-color">
                <div class="container">
                    <div class="row">
                        <!-- logo start -->
                        <div class="col-md-3 col-sm-3">
                            <div class="logo">
                                <!-- Brand -->
                                <a class="navbar-brand " href="index.html">
                                    @*<img src="img/logo/logo.png" alt="">*@
                                </a>
                            </div>
                            <!-- logo end -->
                        </div>
                        <div class="col-md-9 col-sm-9">
                            <!-- mainmenu start -->
                            <nav class="navbar navbar-default">
                                <div class="collapse navbar-collapse" id="navbar-example">
                                    <div class="main-menu">
                                        <ul class="nav navbar-nav navbar-right">
                                            <li>
                                                <a class="pages" href='@Url.Action("Index", "Program")'>Programs</a>
                                            </li>
                                            <li>
                                                @if (HttpContextAccessor.HttpContext.Session.GetString("UserName") != null)
                                                {
                                                   <a class="pages" href='@Url.Action("Index", "Course")'>Courses</a>
                                                }
                                            </li>
                                            <li>
                                                @if (HttpContextAccessor.HttpContext.Session.GetString("UserName") != null)
                                                {
                                        <a class="pages" href='@Url.Action("Index", "Event")'>Schedule</a>}
                                            </li>
                                            <li>
                                                @if (HttpContextAccessor.HttpContext.Session.GetString("UserName") != null)
                                                {
                                        <a class="pages" href='@Url.Action("EventCalendar", "Event")'>Calendar</a>}
                                            </li>
                                            <li>
                                                @if (HttpContextAccessor.HttpContext.Session.GetString("UserName") == null)
                                                {
                                        <a href="#" data-toggle="modal" data-target="#registerModal" class="">Register</a>}
                                            </li>
                                            <li>
                                                @if (HttpContextAccessor.HttpContext.Session.GetString("UserName") == null)
                                                {
                                        <a href="#" data-toggle="modal" data-target="#loginModal" class="ready-btn left-btn">Sign in</a>}
                                            <li>
                                            <li>
                                                @if (HttpContextAccessor.HttpContext.Session.GetString("UserName") != null)
                                                {
                                        <a href='@Url.Action("Logout", "Home")' class="ready-btn left-btn">Log out</a>}
                                            </li>
                                            

                                        </ul>
                                    </div>
                                </div>
                            </nav>
                        </div>

                        <!-- mainmenu end -->
                    </div>


                </div>
            </div>
            <!-- header-area end -->
            <!-- mobile-menu-area start -->
            <div class="mobile-menu-area hidden-lg hidden-md hidden-sm">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="mobile-menu">
                                <div class="logo">
                                    <a href="index.html"><img src="img/logo/logo.png" alt="" /></a>
                                </div>
                                <nav id="dropdown">
                                    <ul>
                                        <li>
                                            <a class="pages" href="index.html">Home</a>
                                            <ul class="sub-menu">
                                                <li><a href="index.html">Home 01</a></li>
                                                <li><a href="index-2.html">Home 02</a></li>
                                            </ul>
                                        </li>
                                        <li><a class="pages" href="about.html">About</a></li>
                                        <li>
                                            <a class="pages" href="#">Results</a>
                                            <ul class="sub-menu">
                                                <li><a href="results.html">Results</a></li>
                                                <li><a href="latest-win.html">Latest Winner</a></li>
                                            </ul>
                                        </li>
                                        <li>
                                            <a class="pages" href="#">Lottery</a>
                                            <ul class="sub-menu">
                                                <li><a href="lottery.html">Lottery one</a></li>
                                                <li><a href="lottery-2.html">Lottery Two</a></li>
                                            </ul>
                                        </li>
                                        <li>
                                            <a class="pages" href="#">Pages</a>
                                            <ul class="sub-menu">
                                                <li><a href="affiliate.html">Affiliate</a></li>
                                                <li><a href="faq.html">FAQ</a></li>
                                                <li><a href="login.html">Login</a></li>
                                                <li><a href="signup.html">Signup</a></li>
                                                <li><a href="error.html">Error</a></li>
                                                <li><a href="terms.html">terms & Conditions</a></li>
                                            </ul>
                                        </li>
                                        <li>
                                            <a class="pages" href="#">Blog</a>
                                            <ul class="sub-menu">
                                                <li><a href="blog.html">Blog grid</a></li>
                                                <li><a href="blog-sidebar.html">Blog Sidebar</a></li>
                                                <li><a href="blog-details.html">Blog Details</a></li>
                                            </ul>
                                        </li>
                                        <li><a href="contact.html">contacts</a></li>
                                    </ul>
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- mobile-menu-area end -->
        </header>
        <!-- header end -->
        <!-- Start Slider Area -->
        <!-- End Slider Area -->
        <!-- Start How to area -->
        <!-- End How to area -->
        <!-- Start Lottery area -->
        <div class="ticket-area area-padding-2">
            <div class="container">
                <!-- Register Modal -->
                <div class="modal left fade" id="registerModal" tabindex="-1" aria-labelledby="registerModal">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <div class="row">
                                    <div class="col-md-10">
                                        @if (TempData["userName"] == null)
                                        {
                            <h5 class="modal-title" id="exampleModalLabel">REGISTER</h5>}
                                    </div>
                                    <div class="col-md-2">
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="modal-body">
                                @await Html.PartialAsync("_SignUP.cshtml", new AccessSheridan.Web.Data.Models.User.RegisterModel())
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Login Modal -->
                <div class="modal left fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="loginModal">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">

                            <div class="modal-header">
                                <div class="row">
                                    <div class="col-md-10">
                                        <h4 class="login-title text-center">LOGIN</h4>
                                    </div>
                                    <div class="col-md-2">
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="modal-body">
                                <div class="row">
                                    <div class="login-form">
                                        <div class="row">
                                            @await Html.PartialAsync("_Login.cshtml", new AccessSheridan.Web.Data.Models.User.LoginModel())
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <!-- End Lottery area -->
        <div id="results" class="payment-history-area bg-color-2 area-padding-2 fix">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        @RenderBody()
                    </div>
                </div>
               
            </div>
        </div>
        
